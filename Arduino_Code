#include <Servo.h>
#include <LiquidCrystal_I2C.h>

// Objects
Servo servo;
LiquidCrystal_I2C lcd(0x27, 16, 2); // I2C LCD (check your address with I2C scanner)
int moisture;
// Pin Definitions
int trigPin = 12;     
int echoPin = 11;     
int servoPin = 8;    
int soilPin = A0;    

long duration,distance;

void setup() {
  Serial.begin(9600);

  pinMode(soilPin,INPUT);

  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  
  servo.attach(servoPin);
  servo.write(90); // Neutral/closed position

  lcd.init();
  lcd.backlight();
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Smart Dustbin");
  delay(2000);
  lcd.clear();
}

void loop() {
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  duration = pulseIn(echoPin, HIGH);
  distance= duration * 0.034 / 2; // cm

  moisture = analogRead(soilPin);
  moisture=map(moisture, 0, 1023, 0, 100); // 0 = dry, 100 = wet

  if(distance <= 10) 
  {
    Serial.print("CHECKING");

    if (moisture < 50) 
    {
      // WET Waste
      lcd.clear();
      lcd.setCursor(0, 0);
      lcd.print("WET Waste");
      Serial.println("Detected: WET Waste");
      servo.write(0); // Move to wet bin
      delay(3000);
      servo.write(90);
    } 
    else 
    {
      // DRY Waste
      lcd.clear();
      lcd.setCursor(0, 0);
      lcd.print("DRY Waste");
      Serial.println("Detected: DRY Waste");
      servo.write(180); // Move to dry bin
      delay(3000);
      servo.write(90);
    }
  }
  else
  {
    lcd.clear();
    Serial.println(distance);
  }
  delay(1000);
}
